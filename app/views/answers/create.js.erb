
$('.answer-errors-header').html('');
$('.answer-errors').html('');
<% if @answer.errors.present? %>
  $('.answer-errors-header').html('Your answer could not be added due to the following errors:');
  <% @answer.errors.full_messages.each do |message| %>
   $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answers').append('<%= j render(@answer) %>');
<% end %>