<% if @answer.errors.present? %>
  $('.answer-errors-header').html('Your answer could not be edited due to the following errors:');
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answer-errors-header').html('');
  $('.answer-errors').html('');
  $('.answers').html('<%= j render(@answer) %>')
  $('.edit-answer-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();
  });
<% end %>